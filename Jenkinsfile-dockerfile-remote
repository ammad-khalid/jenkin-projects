pipeline{
    agent any
    stages{
        stage('Copy Dockerfile'){
            steps{
                script{
                    sh 'scp -r -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/deploy-dockerfile-on-remotehost/* root@18.216.166.195:/root/'
                }
            }
        }
        stage('build docker on remote'){
            steps{
                script{
                    sh 'ssh -o StrictHostKeyChecking=no root@18.188.77.10 docker build /root/ -t remote-dockerfile'
                }
            }
        }
    }
}
